git:
  install_from_source: True
  # tells the state to include and require the git.pkgrepo state.
  install_pkgrepo: True
  # the following is only relevant when installing from source
  source_install:
    remove_system_package: True
    version: 1.8.4.2
    checksum: sha1=f2e9317703553b4215700605c15d0f3a30623a9d
    source_root: /usr/local/src
    install_prefix: /usr/local
    pkg_deps:
      - libcurl4-openssl-dev
      - libexpat1-dev
      - gettext
      - libz-dev
      - libssl-dev
      - build-essential
